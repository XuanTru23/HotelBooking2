<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_dialog"
    android:layout_margin="@dimen/_15sdp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Thay đổi họ và tên"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/custom_background_dialog1"
        android:textSize="@dimen/_15ssp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập họ tên mới cần thay đổi."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/edt_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_custom"
        android:textSize="14sp"
        android:inputType="text"
        android:hint="Họ và tên"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_person"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btn_backround"
            android:alpha="0.4"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="Hủy"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/btn_backround"
            android:text="Gửi"/>
    </LinearLayout>
</LinearLayout>